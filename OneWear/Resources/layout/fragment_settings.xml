<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_layout_top"
    android:layout_marginBottom="@dimen/_layout_bottom"
    android:layout_marginLeft="@dimen/_layout_left"
    android:layout_marginRight="@dimen/_layout_right">

    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
>
        <androidx.appcompat.widget.AppCompatButton
            android:text="Populate wheels"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:id="@+id/prefsBtScan" />
        <androidx.appcompat.widget.AppCompatTextView
            android:text="Select wheel:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prefsWheelsTitle" />
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/prefsWheels" />
        <Switch
            android:text="Use Metric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prefsMetric" />
        <androidx.appcompat.widget.AppCompatTextView
            android:text="Tyre circumference (mm):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prefsTyreCircumferenceTitle" />
        <androidx.appcompat.widget.AppCompatEditText
            android:text="123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prefsTyreCircumference" />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:text="Speed scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appCompatSeekBar1" />
        <Switch
            android:text="Speed warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch2" />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:text="Speed warning scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appCompatSeekBar2" />
    </LinearLayout>
</ScrollView>
