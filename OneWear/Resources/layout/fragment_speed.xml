<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ProgressBar        
        android:id="@+id/speedProgressBar" 
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progress_circular"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"        
        android:gravity="center_vertical|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/speedTextView"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_alignLeft="@id/speedProgressBar" 
        android:layout_alignTop="@id/speedProgressBar"
        android:background="@android:color/transparent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"        	
        android:gravity="center"
        android:id="@+id/tripOdometerTextView"
        android:layout_alignBottom="@id/speedProgressBar"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ampereTextView"
        android:layout_alignBottom="@id/speedProgressBar"
        android:layout_toRightOf="@id/tripOdometerTextView"
        android:layout_marginBottom="40dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"        
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_alignBottom="@id/speedProgressBar"
        android:id="@+id/batteryPercentTextView" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_alignBottom="@id/speedProgressBar"
        android:layout_toRightOf="@id/batteryPercentTextView"
        android:id="@+id/voltageTextView" />

</RelativeLayout>
